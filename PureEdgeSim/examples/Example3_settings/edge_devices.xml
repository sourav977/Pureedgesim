<?xml version="1.0"?>
<edge_devices>
	<!-- here you can define the types of edge devices, and how many devices 
		of this type there will be in this case , there are 4 types of devices(defined 
		here), 30 percent of all devices will be of the first type, this percentage 
		is defined here <percentage> -->
		
	<device> <!-- this is a kiosk -->
		<connectivity>wifi</connectivity><!-- the type of network connection -->
		<mobility>false</mobility><!-- the device is mobile or fixed -->
		<speed>0</speed><!-- the speed of the device in meters per second : 1.4m/s equals 5km/h, 0 = non mobile-->
		<minPauseDuration>0</minPauseDuration><!-- the minimum delay before moving to a new location-->
		<maxPauseDuration>0</maxPauseDuration><!-- the maximum delay before moving to a new location-->
		<minMobilityDuration>0</minMobilityDuration><!-- the minimum delay before stopping-->
		<maxMobilityDuration>0</maxMobilityDuration><!-- the maximum delay before stopping-->
		<battery>false</battery> <!-- relies on battery? -->
		<percentage>100</percentage> <!-- percentage of this device type -->
		<batteryCapacity>0</batteryCapacity> <!-- battery capacity in Watt-Hour -->
		<initialBatteryLevel>0</initialBatteryLevel> <!-- initial battery percentage. e.g. set it to 50 in order to generate devices with 50% remaining energy-->
		<idleConsumption>6000</idleConsumption><!-- idle energy consumption in Watt-->
		<maxConsumption>144000</maxConsumption><!-- max energy consumption in Watt, 
			when device cpu is use at 100% -->
		<isOrchestrator>true</isOrchestrator> <!-- it has a task orchestrator or not -->
		<generateTasks>true</generateTasks> <!-- it generates data/tasks or not -->
	    <cores>8</cores><!-- how many tasks can this device execute in parallel -->
		<mips>10000</mips> <!-- MIPS (million instructions per second) per CPU core -->
	    <ram>8000</ram> <!-- Ram capacity in MBytes -->
		<storage>128000</storage> <!-- Storage in MBytes -->
	</device>
</edge_devices>
